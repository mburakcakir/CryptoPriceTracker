<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/coinFragment">

    <fragment
        android:id="@+id/coinFragment"
        android:name="com.mburakcakir.cryptopricetracker.ui.coin.CoinFragment"
        android:label="Current Coin List"
        tools:layout="@layout/fragment_coin">
        <action
            android:id="@+id/action_coinFragment_to_coinDetailFragment"
            app:destination="@id/coinDetailFragment" />
        <action
            android:id="@+id/action_coinFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/coinDetailFragment"
        android:name="com.mburakcakir.cryptopricetracker.ui.detail.CoinDetailFragment"
        android:label="fragment_coin_detail"
        tools:layout="@layout/fragment_coin_detail">
        <argument
            android:name="baseCoin"
            app:argType="com.mburakcakir.cryptopricetracker.data.model.CoinMarketItem" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mburakcakir.cryptopricetracker.ui.entry.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_coinFragment"
            app:destination="@id/coinFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.mburakcakir.cryptopricetracker.ui.entry.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>